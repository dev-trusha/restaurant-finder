    </div>

    <!-- Charts Section -->
    <div class="row g-4">
        <!-- Rating Chart -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">â­ Restaurant Ratings Distribution</h5>
                </div>
