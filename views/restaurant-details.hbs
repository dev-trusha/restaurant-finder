<div class="container mt-4">
    <a href="/restaurants/search/results" class="btn btn-outline-secondary mb-4">
        â† Back to Results
    </a>

    <div class="card">
        <div class="card-header bg-primary text-white">
           <!-- Updated Card Header with Actions -->
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">{{restaurant.name}}</h1>
                <div class="btn-group">
                    <a href="/restaurants/{{restaurant._id}}/edit" class="btn btn-warning btn-sm">
                        âœï¸ Edit
                    </a>
                    <a href="/restaurants/{{restaurant._id}}/delete" class="btn btn-danger btn-sm">
                        ğŸ—‘ï¸ Delete
                    </a>
                </div>
            </div><br/>

                <div>
                    <span class="badge bg-warning text-dark fs-5">
                        â­ {{restaurant.rating}}/5
                    </span>
                    <span class="badge bg-success ms-2 fs-5">
                        {{restaurant.priceRange}}
                    </span>
                </div>
            </div>
        </div>
        
        <div class="card-body">
            {{#if restaurant.image}}
            <img src="{{restaurant.image}}" 
                 class="img-fluid rounded mb-4" 
                 alt="{{restaurant.name}}" 
                 style="max-height: 400px; width: 100%; object-fit: cover;"
                 onerror="this.src='https://picsum.photos/1200/400?food'">
            {{else}}
            <img src="https://picsum.photos/1200/400?food" 
                 class="img-fluid rounded mb-4" 
                 alt="{{restaurant.name}}">
            {{/if}}
            
            <div class="row">
                <div class="col-md-8">
                    <h4 class="border-bottom pb-2 mb-3">ğŸ“ Location Information</h4>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>Address:</strong><br>
                            {{restaurant.address.street}}<br>
                            {{restaurant.address.city}}, {{restaurant.address.country}}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Location:</strong><br>
                            {{restaurant.location}}
                            </p>
                            {{#if restaurant.geo}}
                            <p><strong>Coordinates:</strong><br>
                            Lat: {{restaurant.geo.lat}}, Lng: {{restaurant.geo.lng}}
                            </p>
                            {{/if}}
                        </div>
                    </div>

                    <h4 class="border-bottom pb-2 mb-3">ğŸ½ï¸ Cuisine & Features</h4>
                    <div class="mb-4">
                        <p><strong>Cuisines:</strong></p>
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            {{#each restaurant.cuisines}}
                            <span class="badge bg-primary">{{this}}</span>
                            {{/each}}
                        </div>
                        
                        <p><strong>Amenities:</strong></p>
                        <div class="d-flex flex-wrap gap-2">
                            {{#each restaurant.amenities}}
                            <span class="badge bg-info">{{this}}</span>
                            {{/each}}
                            {{#if restaurant.hasWifi}}
                            <span class="badge bg-success">ğŸ“¶ WiFi Available</span>
                            {{/if}}
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title border-bottom pb-2 mb-3">ğŸ’° Pricing Information</h5>
                            
                            <div class="mb-4">
                                <p class="mb-1"><strong>Average Cost for Two:</strong></p>
                                <h4 class="text-primary">{{restaurant.currency}} {{restaurant.averageCostForTwo}}</h4>
                            </div>
                            
                            <div class="mb-4">
                                <p class="mb-1"><strong>Price Range:</strong></p>
                                <h4 class="text-success">{{restaurant.priceRange}}</h4>
                            </div>

                            <div class="mb-4">
                                <p class="mb-1"><strong>Rating:</strong></p>
                                <div class="d-flex align-items-center">
                                    <div class="rating-display">
                                        {{#ratingStars restaurant.rating}}{{/ratingStars}}
                                        <span class="ms-2 fw-bold">{{restaurant.rating}}/5</span>
                                    </div>
                                </div>
                            </div>

                            {{#if restaurant.votes}}
                            <div class="mt-3">
                                <p class="mb-0"><small class="text-muted">Based on {{restaurant.votes}} votes</small></p>
                            </div>
                            {{/if}}
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="/restaurants/search" class="btn btn-primary w-100 mb-2">
                            ğŸ” Search More Restaurants
                        </a>
                        <a href="/restaurants/create" class="btn btn-outline-primary w-100">
                            â• Add New Restaurant
                        </a>
                    </div>
                </div>
            </div>

            {{#if restaurant.reviews}}
            <div class="mt-5">
                <h4 class="border-bottom pb-2 mb-3">ğŸ“ Customer Reviews</h4>
                <div class="row">
                    {{#each restaurant.reviews}}
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <strong>{{this.userId}}</strong>
                                    <span class="text-warning">
                                        {{#ratingStars this.stars}}{{/ratingStars}}
                                    </span>
                                </div>
                                <p class="mb-2">{{this.text}}</p>
                                <small class="text-muted">
                                    {{#if this.date}}
                                    {{formatDate this.date}}
                                    {{/if}}
                                </small>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>